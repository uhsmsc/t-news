{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "resolveJsonModule": true,
    "types": ["node", "express"]
  },
  "include": ["server/**/*.ts", "routes/**/*.ts", "models/**/*.ts", "index.ts", "data/**/*.json"],
  "exclude": ["node_modules", "dist", "client"]
}
